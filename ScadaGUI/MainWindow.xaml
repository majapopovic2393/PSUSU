<Window x:Class="ScadaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScadaGUI"
        mc:Ignorable="d"
        Title="SCADA" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Unos novog taga -->
        <GroupBox Header="Dodaj novi tag" Grid.Row="0" Grid.Column="0" Margin="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ComboBox x:Name="TagTypeComboBox" Width="60" Margin="2" SelectedIndex="0" SelectionChanged="TagTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="DI"/>
                    <ComboBoxItem Content="DO"/>
                    <ComboBoxItem Content="AI"/>
                    <ComboBoxItem Content="AO"/>
                </ComboBox>
                <TextBox x:Name="TagIdTextBox" Width="60" Margin="2" Text="Id"/>
                <TextBox x:Name="TagDescTextBox" Width="80" Margin="2" Text="Opis"/>
                <TextBox x:Name="TagAddrTextBox" Width="80" Margin="2" Text="Adresa"/>
                <Label Content="Low limit:" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="TagLowLimitTextBox" Width="50" Margin="2" Text="Low"/>
                <Label Content="High limit:" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="TagHighLimitTextBox" Width="50" Margin="2" Text="High"/>
                <Label Content="Units:" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="TagUnitsTextBox" Width="50" Margin="2" Text="Units" ToolTip="Jedinica mere (npr. °C, bar, l/min)"/>
                <Label Content="Scan time:" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="TagScanTimeTextBox" Width="50" Margin="2" Text="Scan" ToolTip="Period skeniranja u sekundama (samo za input tagove)"/>
                <CheckBox x:Name="TagOnOffScanCheckBox" Content="On/Off Scan" Margin="2"/>
                <Label Content="Initial value:" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="TagInitValueTextBox" Width="60" Margin="2" Text="InitVal" ToolTip="Početna vrednost (samo za AO tagove)"/>
                <Button Content="Dodaj tag" Margin="2" Click="AddTagButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Prikaz tagova -->
        <GroupBox Header="Tagovi" Grid.Row="1" Grid.Column="0" Margin="5">
            <StackPanel>
                <DataGrid x:Name="TagsDataGrid" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single" Height="150"/>
                <Button Content="Obriši selektovani tag" Margin="2" Click="DeleteTagButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Prikaz alarma -->
        <GroupBox Header="Alarmi" Grid.Row="2" Grid.Column="0" Margin="5">
            <StackPanel>
                <DataGrid x:Name="AlarmsDataGrid" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single" Height="150"/>
                <Button Content="Obriši selektovani alarm" Margin="2" Click="DeleteAlarmButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Unos alarma za selektovani AI tag -->
        <GroupBox Header="Dodaj alarm na AI tag" Grid.Row="3" Grid.Column="0" Margin="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ComboBox x:Name="AlarmTypeComboBox" Width="60" Margin="2" SelectedIndex="0">
                    <ComboBoxItem Content="LOW"/>
                    <ComboBoxItem Content="HIGH"/>
                </ComboBox>
                <TextBox x:Name="AlarmLimitTextBox" Width="60" Margin="2" Text="Granica"/>
                <TextBox x:Name="AlarmMsgTextBox" Width="120" Margin="2" Text="Poruka"/>
                <Button Content="Dodaj alarm" Margin="2" Click="AddAlarmButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Dugme za REPORT pomereno desno -->
        <Button x:Name="ReportButton" Content="REPORT" Grid.Row="3" Grid.Column="1" Height="40" Margin="0,10,0,9" HorizontalAlignment="Center" Width="120" Click="ReportButton_Click"/>

        <!-- Prikaz poruka o alarmima -->
        <GroupBox Header="Poruke o alarmima" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Margin="5,5,5,54">
            <ListBox x:Name="AlarmMessagesListBox" Height="264"/>
        </GroupBox>

        <!-- Prikaz izlaznih tagova i ručno podešavanje vrednosti -->
        <GroupBox Header="Izlazni tagovi (DO/AO)" Grid.Column="1" Margin="5,0,5,297" Grid.RowSpan="3">
            <StackPanel Height="189">
                <DataGrid x:Name="OutputsDataGrid" AutoGenerateColumns="False" IsReadOnly="False" SelectionMode="Single" Height="140">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Opis" Binding="{Binding Description}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Adresa" Binding="{Binding IOAddress}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Tip" Binding="{Binding Type}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Vrednost" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Postavi izlaz" Click="SetOutputButton_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
